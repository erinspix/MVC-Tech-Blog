<h2>{{title}}</h2>
<p>Posted by {{User.username}} on {{createdAt}}</p>
<p>{{content}}</p>

<h3>Comments</h3>
{{#each comments}}
    <div class="comment">
        <p>{{comment_text}}</p>
        <p>â€” {{User.username}}, {{createdAt}}</p>
    </div>
{{else}}
    <p>No comments yet. Be the first to comment!</p>
{{/each}}

{{#if logged_in}}
    <form id="comment-form">
        <textarea id="comment-text" placeholder="Add a comment"></textarea>
        <button type="submit">Submit</button>
    </form>
{{/if}}
