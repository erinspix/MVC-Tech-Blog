<h2>{{post.title}}</h2>
<p>Posted by {{post.User.username}} on {{post.createdAt}}</p>
<p>{{post.content}}</p>

<h3>Comments</h3>
{{#each post.Comments}}
  <div class="comment">
    <p>{{this.comment_text}}</p>
    <p>â€” {{this.User.username}}, {{this.createdAt}}</p>
  </div>
{{else}}
  <p>No comments yet. Be the first to comment!</p>
{{/each}}

{{#if logged_in}}
  <form id="comment-form">
    <textarea id="comment-text" placeholder="Add a comment"></textarea>
    <button type="submit">Submit</button>
  </form>
{{else}}
  <p>Please <a href="/login">log in</a> to add a comment.</p>
{{/if}}

<script src="/js/comments.js"></script>
